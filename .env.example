# =============================================================================
# GlowCam API - Environment Variables
# =============================================================================

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/glowcam

# Redis
REDIS_URL=redis://localhost:6379

# S3 / MinIO (Object Storage)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=glowcam-media
S3_ACCESS_KEY=glowcam_minio
S3_SECRET_KEY=glowcam_minio_secret
S3_REGION=us-east-1
S3_PUBLIC_URL=http://localhost:9000/glowcam-media

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production

# Anthropic AI (Claude API)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# SMTP (Email)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@glowcam.com

# RevenueCat (In-App Purchases)
REVENUECAT_WEBHOOK_SECRET=your-revenuecat-webhook-secret

# App Config
API_PORT=3001
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000,http://localhost:8081
APP_URL=http://localhost:3000
